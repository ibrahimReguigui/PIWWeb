{% extends 'base-back.html.twig' %}

{% block title %}Abonements index{% endblock %}

{% block body %}
    <h1>Abonements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomSportif</th>
                <th>PrenomSportif</th>
                <th>Dated</th>
                <th>Datef</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonement in abonements %}
            <tr>
                <td>{{ abonement.id }}</td>
                <td>{{ abonement.NomSportif }}</td>
                <td>{{ abonement.PrenomSportif }}</td>
                <td>{{ abonement.dated ? abonement.dated|date('Y-m-d') : '' }}</td>
                <td>{{ abonement.datef ? abonement.datef|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_abonements_show', {'id': abonement.id}) }}">show</a>
                    <a href="{{ path('app_abonements_edit', {'id': abonement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_abonements_new') }}">Create new</a>

    <br>
    <br>

    <a href="{{ path('app_abonements_liste') }}">Imprimer La Liste Des Abonnements</a>
{% endblock %}
