{% extends 'base-back.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>
    <style>
        .container {
            width: 300px;
            display: flex;
            justify-content: center;
        }
    </style>
    <table class="table">
        <tbody>
        <tr>
            <th>Image</th>
            <td><img src="{{asset('images/Product Images/') ~ product.urlImg}}" width="300" height="300"></td>
        </tr>
        <tr>
            <th>ProdId</th>
            <td>{{ product.prodId }}</td>
        </tr>
        <tr>
            <th>ExpireDate</th>
            <td>{{ product.expireDate ? product.expireDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>ProdName</th>
            <td>{{ product.prodName }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>ProdQte</th>
            <td>{{ product.prodQte }}</td>
        </tr>
        <tr>
            <th>ProdType</th>
            <td>{{ product.prodType }}</td>
        </tr>
        </tbody>
    </table>
    <div class="container">
        <button type="button" class="btn btn-success"><a  style="color:#FFFFFF; padding: 10px 50px 10px 50px;" href="{{ path('product_index') }}" >back to list</a></button>


        <button type="button" class="btn btn-warning">
            <a style="color:#FFFFFF; padding: 10px 74px 10px 74px ;" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
        </button>


        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
