{% extends 'base-front.html.twig' %}

{% block pagetitle %}Liste Cours{% endblock %}
{% block pagetitle1 %}Cours{% endblock %}
{% block pagetitle2 %}Liste Cours{% endblock %}
{% block body %}


    <section class="choseus-section spad" style="background-color:white;text-align:center" >
    <div class="search">
        <div class="searchP">

            <form   method="post" action="{{ path('recherche') }}">
                <label style="color: white;">Recherche</label>
                <input type="text" name="search"><input type="submit" style="background-color:gray;color: white" value="Recherche" >
                <div style="display:flex;justify-content: center;flex-wrap: wrap;align-content: space-around;flex-direction: row">
                    <div style="width:150px">
                        <input type="checkbox" id="Nom_Cour" name="Nom_Cour">
                        <label style="color: #f36100;">Nom Cour</label>
                    </div>
                    <div style="width:100px">
                        <input type="checkbox" id="Nom_Salle" name="Nom_Salle">
                        <label style="color: #f36100;">Nom_Salle</label>
                    </div>
                    <div style="width:100px">
                        <input type="checkbox" id="Date" name="Date">
                        <label style="color: #f36100;">Date</label>
                    </div>
                    <div style="width:100px">
                        <input type="checkbox" id="Heure" name="Heure">
                        <label style="color: #f36100;">Heure</label>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="container">

    <section class="pricing-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Cours</span>
                        <h2>Liste Cours</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                {% for cour_salle in cour_salles %}
                <div class="col-lg-4 col-md-8">
                    <div class="ps-item">
                        <h3>{{ cour_salle.Utilisateur.nom }}</h3>
                        <div class="pi-price">
                            <h2>{{ cour_salle.nomCour }}</h2>
                            <span>{{ cour_salle.information }}</span>
                        </div>
                        <ul>
                            <li>Participants : {{ cour_salle.nbrActuel }} / {{ cour_salle.nbrTotal }}</li>
                            <li>{{ cour_salle.date ? cour_salle.date|date('Y-m-d') : '' }}</li>
                            <li>{{ cour_salle.tCour ? cour_salle.tCour|date('H:i:s') : '' }}</li>

                        </ul>
                        <a  class="primary-btn pricing-btn" href="{{ path('app_reserver_cour_salle_index', {'idCour': cour_salle.id,'idSalle':cour_salle.Utilisateur.id}) }}">RÃ©server</a>
                    </div>
                </div>
                {% else %}
                    <div class="ps-item">
                        <div class="pi-price">
                            <h2>Aucun cour disponible</h2>
                        </div>
                    </div>
                {% endfor %}


            </div>
        </div>
    </section>





{% endblock %}