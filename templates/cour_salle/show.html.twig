{% extends 'base-back.html.twig' %}

{% block title %}CourSalle{% endblock %}
{% block titreDroite %}Salle4{% endblock %}
{% block body %}

<h1>Cour</h1>
    <table class="table bg-white mt-5 mb-5">
        <tbody>

            <tr>
                <th>NomCour</th>
                <td>{{ cour_salle.nomCour }}</td>
            </tr>
            <tr>
                <th>Information</th>
                <td>{{ cour_salle.information }}</td>
            </tr>
            <tr>
                <th>NbrActuel</th>
                <td>{{ cour_salle.nbrActuel }}</td>
            </tr>
            <tr>
                <th>NbrTotal</th>
                <td>{{ cour_salle.nbrTotal }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ cour_salle.date ? cour_salle.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ cour_salle.tCour ? cour_salle.tCour|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cour_salle_index') }}">back to list</a>

    <a href="{{ path('app_cour_salle_edit', {'id': cour_salle.id}) }}">edit</a>

    {{ include('cour_salle/_delete_form.html.twig') }}
    <h1>Liste Participant</h1>
    <div style="text-align:center;background-color:white;">
        <table class="table bg-white mt-5 mb-5">
            <tbody>
            <tr class="thead-dark">
                <th>Numero</th>
                <th>Paricipant</th>

            </tr>
            {% for r in reservation %}
                <tr>
                    <td>{{ r.id }}</td>
                    <td>{{ r.idSportif.nom }}</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
