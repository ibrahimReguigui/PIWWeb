{% extends 'base-back.html.twig' %}

{% block title %}Programme {% endblock %}

{% block body %}
    <h1> Les Programme </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom Programme</th>
                <th>Objectif Programme</th>
                <th>Description Programme</th>
                <th>Categorie Programme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for programme in programmes %}
            <tr>
                <td>{{ programme.id }}</td>
                <td>{{ programme.nomProgramme }}</td>
                <td>{{ programme.objectifProgramme }}</td>
                <td>{{ programme.descriptionProgramme }}</td>
                <td>{{ programme.categorieProgramme }}</td>
                <td>
                    <a style="color:green;" href="{{ path('app_programme_show', {'id': programme.id}) }}">show</a>
                    <a style="color: red;"  href="{{ path('app_programme_edit', {'id': programme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_programme_new') }}">Create new</a>
{% endblock %}
