{% extends 'base-front.html.twig' %}

{% block pagetitle %}Liste Disponibilitées{% endblock %}
{% block pagetitle1 %}Coach{% endblock %}
{% block pagetitle2 %}Liste Disponibilitées{% endblock %}
{% block body %}


    <section class="team-section spad" style="margin: 80px 150px 80px 150px;padding-right: 100px;padding-left: 100px">
        <div class="container">{% for disponibilite_coache in disponibilite_coaches %}
            <div class="row">
                <div class="col-lg-12">
                    <div class="team-title">
                        <div class="section-title" >

                            <h2 >{{ disponibilite_coache.idCoach.nom }}
                                <span>{{ disponibilite_coache.date|date('Y-m-d') }}
                                {{ disponibilite_coache.time|date('H:i:s') }}</span></h2>


                        </div>
                        <a href="{{ path('app_reservation_coach_reserver', {'idCoach': disponibilite_coache.idCoach.id,
                            'idDisponibilite':disponibilite_coache.id}) }}" class="primary-btn btn-normal appoinment-btn">Reserver</a>
                    </div>
                </div>
            </div>
            {% else %}

                    <h2 colspan="3">no records found</h2>

            {% endfor %}
        </div>
    </section>

{% endblock %}
