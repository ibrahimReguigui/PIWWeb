{% extends 'base-front.html.twig' %}

{% block pagetitle %}Reservations{% endblock %}
{% block pagetitle1 %}Coach{% endblock %}
{% block pagetitle2 %}Reservations{% endblock %}
{% block body %}


    <table class="table table-bordered bg-white mt-5 mb-5">
        <thead class="thead-dark">
        <tr>

            <th>Coach</th>
            <th>Date</th>
            <th>Time</th>
            <th>Etat</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>

                <td>{{ reservation.idCoach.nom }}</td>
                <td>{{ reservation.date|date('Y-m-d') }}</td>
                <td>{{ reservation.time|date('H:i:s') }}</td>
                <td>{{ reservation.etat }}</td>
                <td>
                    <a href="{{ path('app_reservation_coach_annuler',{'id':reservation.id}) }}" >Annuler</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
