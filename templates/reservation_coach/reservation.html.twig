{% extends 'base-front.html.twig' %}

{% block pagetitle %}Reservations{% endblock %}
{% block pagetitle1 %}Coach{% endblock %}
{% block pagetitle2 %}Reservations{% endblock %}
{% block body %}

    <section class="team-section spad" style="margin: 80px 150px 80px 150px;padding-right: 100px;padding-left: 100px">

        <div class="container">{% for reservation in reservations %}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="team-title">
                            <div class="section-title" >

                                <h2 >{{ reservation.idCoach.nom }}
                                    <span>{{ reservation.date|date('Y-m-d') }}
                                        {{ reservation.time|date('H:i:s') }}</span></h2>
                                {% if reservation.etat=='En Attente' %}
                                <h2 style="color:red">{{ reservation.etat }}</h2>
                                {% else %}
                                    <h2 style="color:green">{{ reservation.etat }}</h2>
                                    {% endif %}

                            </div>
                            <a href="{{ path('app_reservation_coach_annuler',{'id':reservation.id}) }}" class="primary-btn btn-normal appoinment-btn">Annuler</a>
                        </div>
                    </div>
                </div>
            {% else %}

                    <div class="ps-item">
                        <div class="pi-price">
                            <h2>Aucunne Reservation effectu√©e</h2>
                        </div>
                    </div>

            {% endfor %}
        </div>
    </section>


{% endblock %}
