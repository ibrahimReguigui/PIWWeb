{% extends 'base_back.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>NumTel</th>
                <td>{{ user.numTel }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>MailAdress</th>
                <td>{{ user.mailAdress }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Whoami</th>
                <td>{{ user.whoami }}</td>
            </tr>
            <tr>
                <th>BlocRaison</th>
                <td>{{ user.blocRaison }}</td>
            </tr>
            <tr>
                <th>Unbloc</th>
                <td>{{ user.unbloc ? user.unbloc|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}"><button class="btn btn-sm btn-outline-info">Retour</button></a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}"><button class="btn btn-sm btn-outline-info">Modifier</button></a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
